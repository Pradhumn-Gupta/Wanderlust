<% layout('layouts/boilerplate') -%>
  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <br><br>
        <h3>Create a New Listing</h3>
        <form method="post" action="/listings">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Enter Catchy Title" type="text" id="title" class="form-control"/>
          </div>
    
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea
            name="listing[description]"
            placeholder="Enter Description"
            id="description"
            class="form-control"
          ></textarea>
          </div>
    
          <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input
            name="listing[image]"
            placeholder="Enter Image URL/Link"
            type="text"
            id="image"
            class="form-control"
          />
          </div>
    
          <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1200" type="number" id="price" class="form-control"/>
          </div>

          <div class="row">
            <div class="mb-3 col-md-6">
              <label for="country" class="form-label">Country</label>
              <input name="listing[country]" placeholder="India" type="text" id="country" class="form-control"/>
            </div>
            
            <div class="mb-3 col-md-6">
              <label for="location" class="form-label">Locatiom</label>
              <input
              name="listing[location]"
              placeholder="Jaipur,Rajasthan"
              type="text"
              id="location"
              class="form-control"
              />
            </div>
          </div>
          <br>
    
          <button class="btn btn-dark add-btn">Add</button>
          <br><br>
        </form>
      </div>
    </div>
  </body>
