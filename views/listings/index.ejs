<% layout('layouts/boilerplate') %>
<body>
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listings/new">
      <button>Create New Listing</button>
    </form>
    <ul> -->
    <div class="row row-col-lg-3 row-col-md-2 row-col-sm-1">
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="card listing-link" style="width: 20rem;">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b> <br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
            </p>
          </div>
        </a>
      <% } %>
    </div>
</body>
